# OFAC Screening Tool - Environment Variables
# Copy this file to .env and customize as needed

# ======================
# Matching Thresholds
# ======================
# Score >= OFAC_MATCH_THRESHOLD_NOK = NOK (blocked)
OFAC_MATCH_THRESHOLD_NOK=95

# Score >= OFAC_MATCH_THRESHOLD_REVIEW = REVIEW (manual review)
OFAC_MATCH_THRESHOLD_REVIEW=80

# ======================
# OFAC Data Settings
# ======================
# Path to OFAC data cache directory
OFAC_DATA_PATH=./data/ofac

# Enable automatic update checks
OFAC_AUTO_UPDATE=true

# Hours between automatic update checks
OFAC_UPDATE_CHECK_HOURS=24

# ======================
# Performance Settings
# ======================
# Maximum number of entities to process in a single batch
OFAC_BATCH_SIZE=100

# Maximum rows allowed in uploaded file
OFAC_MAX_FILE_ROWS=10000

# ======================
# Logging Settings
# ======================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
OFAC_LOG_LEVEL=INFO

# Path to log directory
OFAC_LOG_PATH=./data/logs

# ======================
# API Settings
# ======================
# API server host
OFAC_API_HOST=127.0.0.1

# API server port
OFAC_API_PORT=8000

# ======================
# Streamlit Settings
# ======================
# Streamlit server port
OFAC_STREAMLIT_PORT=8501
